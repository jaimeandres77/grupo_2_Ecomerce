<% styles=['/css/tablaProducto.css'] %>
  <%- include ("../layout/startPage",{title: 'Listado de Usuarios',styles}) %>
    <h1>Listado de Usuario</h1>
    <div class="button_edit">
      <button type="type"><a href="/product/create" class="create">Crear</a></button>
    </div>
    <% if (locals.users && users.length> 0) { %>
      <div class="container">
        <table class="table_container">
          <tr>
            <th>Id</th>
            <th>Nombre del Usuario<th>
            <th><i class="far fa-edit"></i></th>
            <th><i class="far fa-trash-alt"></i></th>
          </tr>
          <% users.forEach((user,index)=> { %>
            <tr>
              <td>
                <%= ((page - 1) * 5) + index + 1 %>
              </td>
              <td>
                <a href="/product/detail/<%= user.id %>">
                  <%= user.name %>
                </a>
              </td>
              <td>
                <button type="submit">
                  <a href="/product/edit/<%= user.id %>">Editar</a>
                </button>
              </td>
              <td>
                <button type="submit">
                  <form action="/product/delete/<%= user.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                  </form>
                </button>
              </td>
            </tr>
            <% }); %>
        </table>
        <input type="hidden" name="page" value="<%= locals.page || 0 %>/<%= locals.count || 0 %>">
        <div id="page" class="page"></div>
      </div>
      <% } else { %>
        <h2 class="noStock">No hay Usuarios registrados actualmente</h1>
          <% } %>
            <% const scripts=['/js/pagination.js'] %>
              <%- include('../layout/endPage',{scripts}) %>
